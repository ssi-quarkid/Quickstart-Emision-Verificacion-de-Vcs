{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6"
    ],
    "types": [
      "reflect-metadata",
      "node"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "./lib",
    "./node_modules",
    "./dist"
  ]
}